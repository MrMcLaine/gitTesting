<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
        http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>registration</servlet-name>
    <servlet-class>ua.magazines.web.RegistrationServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>registration</servlet-name>
    <url-pattern>/registration</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>ua.magazines.web.LoginServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>ua.magazines.web.LogoutServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>magazineServlet</servlet-name>
    <servlet-class>ua.magazines.web.MagazineServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>magazineServlet</servlet-name>
    <url-pattern>/magazine</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>homePageServlet</servlet-name>
    <servlet-class>ua.magazines.web.HomePageServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>homePageServlet</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>paymentServlet</servlet-name>
    <servlet-class>ua.magazines.web.PaymentServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>paymentServlet</servlet-name>
    <url-pattern>/payment</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>bucketServlet</servlet-name>
    <servlet-class>ua.magazines.web.BucketServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>bucketServlet</servlet-name>
    <url-pattern>/bucket</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>roleServlet</servlet-name>
    <servlet-class>ua.magazines.web.UserRoleServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>roleServlet</servlet-name>
    <url-pattern>/user-role</url-pattern>
  </servlet-mapping>
</web-app>



